<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <TextView
        android:id="@+id/id_text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="60"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_image_mole_0_0"
            android:layout_width="83dp"
            android:layout_height="84dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_0_1"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_0_2"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_0_3"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_image_mole_1_0"
            android:layout_width="83dp"
            android:layout_height="84dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_1_1"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_1_2"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_1_3"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_image_mole_2_0"
            android:layout_width="83dp"
            android:layout_height="84dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_2_1"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_2_2"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_2_3"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_image_mole_3_0"
            android:layout_width="83dp"
            android:layout_height="84dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_3_1"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_3_2"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/id_image_mole_3_3"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/btn_star_big_on" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="17dp" />

</LinearLayout>